# Configuration Replit
run = "python3 app.py"
language = "python3"
entrypoint = "app.py"

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "python3 app.py"]

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

# Installation automatique des d√©pendances
[packager]
language = "python3"
ignoredPaths = [".venv"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true
